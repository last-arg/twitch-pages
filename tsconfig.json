{
  "compilerOptions": {
    "target": "es2021",
    "useDefineForClassFields": true,
    "module": "es2021",
    "lib": ["es2021", "DOM"],
    "moduleResolution": "Node",
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "isolatedModules": true,
    "paths": {
      "config": ["./src/config.prod.js"]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/htmx.org/dist/htmx.d.ts",
      "src/index.d.ts",
    ]
  },
  "include": ["./src"]
}
