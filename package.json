    "netlify-cli": "^6.14.7",
    "node-fetch": "^3.0.0",
    "postcss": "^8.3.6",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.2",
    "vite": "^2.4.4",
    "vite-plugin-compression": "^0.3.5",
    "vite-plugin-cross-origin-isolation": "^0.1.1"
