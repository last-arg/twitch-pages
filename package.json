{
  "name": "twitch-pages",
  "version": "1.0.0",
  "description": "Twitch alternative page with htmx",
  "scripts": {
    "dev": "npm-run-all -p watch:* netlify",
    "netlify": "netlify dev",
    "watch:unocss": "unocss --watch",
    "watch:css": "postcss src/css/main.css -o public/css/main.css --watch",
    "watch:ts": "esbuild src/*.ts --bundle --tree-shaking --outdir=public/js/ --watch",
    "watch:config": "esbuild src/config.prod.ts --format=cjs --outdir=src/js/ --watch",
    "build": "NODE_ENV=production npm-run-all clean-build build:ts build:11ty -p build:css minify:*",
    "build:ts": "esbuild src/main.ts --bundle --outdir=_site/public/js/",
    "build:sw": "workbox generateSW",
    "build:11ty": "esbuild src/config.prod.ts --format=cjs --outdir=src/js/ && eleventy",
    "build:css": "unocss && NODE_ENV=production postcss src/css/main.css --no-map -o _site/public/css/main.css",
    "minify:js": "terser _site/public/js/main.js -m --toplevel -o _site/public/js/main.js",
    "minify:svg": "svgo _site/public/assets/icons.svg",
    "minify:html": "html-minifier --input-dir _site --output-dir _site --file-ext html --remove-comments --collapse-whitespace",
    "clean-build": "rm -rf _site/"
  },
  "dependencies": {
    "@artalar/act": "^3.0.3",
    "htmx.org": "^1.8.3",
    "open-props": "^1.5.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0",
    "@11ty/eleventy-plugin-webc": "^0.9.3",
    "@netlify/functions": "^1.4.0",
    "@types/node": "^16.11.6",
    "@unocss/cli": "^0.47.5",
    "cssnano": "^5.1.14",
    "esbuild": "^0.17.3",
    "html-minifier": "^4.0.0",
    "netlify-cli": "^12.10.0",
    "node-fetch": "^2.6.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "postcss-dropunusedvars": "^1.2.1",
    "postcss-import": "^15.0.0",
    "svgo": "^3.0.2",
    "typescript": "^4.3.2",
    "unocss": "^0.47.5",
    "workbox-cli": "^6.5.4"
  }
}
