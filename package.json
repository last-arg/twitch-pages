{
  "name": "twitch-pages",
  "version": "1.0.0",
  "description": "Twitch alternative page with htmx and alpine",
  "scripts": {
    "netlify": "netlify dev",
    "dev": "bun run watch:config & bun run watch:css & bun run watch:js",
    "css": "npx unocss 'src/**/*.webc' 'netlify/functions/*.{js,ts}' 'public/partials/*.html' 'src/*.ts' -o public/css/main.css",
    "build": "npm run css && tsc && vite build",
    "serve": "vite preview",
    "watch:css": "bun run watch:unocss & bun run watch:postcss",
    "watch:unocss": "npx unocss src/*.webc src/**/*.webc src/**/**/*.webc -o src/css/utilities_generated.css --watch",
    "watch:postcss": "postcss src/css/main.css -o public/css/main.css --watch",
    "watch:js": "npx esbuild src/main.ts --bundle --outdir=public/js/ --watch",
    "watch:config": "npx esbuild src/config.prod.ts --format=cjs --outdir=src/js/ --watch"
  },
  "dependencies": {
    "alpinejs": "^3.10.5",
    "htmx.org": "^1.8.3",
    "open-props": "^1.4.25"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.18",
    "@11ty/eleventy-plugin-webc": "^0.7.0",
    "@leanadmin/alpine-typescript": "^0.1.25",
    "@netlify/functions": "^1.3.0",
    "@types/node": "^16.11.6",
    "@unocss/cli": "^0.46.3",
    "netlify-cli": "^12.1.0",
    "node-fetch": "^2.6.6",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "typescript": "^4.3.2",
    "unocss": "^0.46.3"
  }
}
