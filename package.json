{
  "name": "twitch-pages",
  "version": "1.0.1",
  "description": "Twitch alternative pages",
  "scripts": {
    "dev": "npm-run-all -p watch:* netlify",
    "netlify": "netlify dev",
    "watch:unocss": "unocss --watch",
    "watch:js": "esbuild src/main.js src/third-party.js --bundle --outdir=public/js/ --watch",
    "watch:config": "esbuild src/config.prod.js --format=cjs --outdir=src/js/ --watch",
    "build": "NODE_ENV=production npm-run-all clean-build build:js build:11ty -p build:css minify:*",
    "build:js": "esbuild src/main.js src/third-party.js --bundle --minify --outdir=_site/public/js/",
    "build:sw": "workbox generateSW",
    "build:11ty": "esbuild src/config.prod.js --format=cjs --outdir=src/js/ && eleventy",
    "build:css": "unocss",
    "minify:svg": "svgo --config svg.config.js -o _site/public/assets/icons.svg -i public/assets/icons.svg",
    "clean-build": "rm -rf _site/ && rm -rf public/{css,js}"
  },
  "dependencies": {
    "htmx.org": "^1.9.10",
    "idiomorph": "^0.3.0",
    "open-props": "^1.6.17"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@netlify/functions": "^2.5.1",
    "@types/node": "^20.11.5",
    "esbuild": "^0.19.12",
    "html-minifier": "^4.0.0",
    "lightningcss": "^1.23.0",
    "netlify-cli": "^17.15.2",
    "npm-run-all": "^4.1.5",
    "purgecss": "^5.0.0",
    "svgo": "^3.2.0",
    "unocss": "^0.58.3",
    "workbox-cli": "^6.6.0"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ]
}
