{
  "name": "twitch-pages",
  "version": "1.0.0",
  "description": "Twitch alternative page with htmx",
  "scripts": {
    "dev": "npm-run-all -p watch:* netlify",
    "netlify": "netlify dev",
    "watch:unocss": "unocss --watch",
    "watch:css": "watchexec -w src/css/ -e css -r 'lightningcss --bundle src/css/main.css -o public/css/main.css'",
    "watch:ts": "esbuild src/*.ts --bundle --tree-shaking --outdir=public/js/ --watch",
    "watch:config": "esbuild src/config.prod.ts --format=cjs --outdir=src/js/ --watch",
    "build": "NODE_ENV=production npm-run-all clean-build build:ts build:11ty -p build:css minify:*",
    "build:ts": "esbuild src/main.ts --bundle --outdir=_site/public/js/",
    "build:sw": "workbox generateSW",
    "build:11ty": "esbuild src/config.prod.ts --format=cjs --outdir=src/js/ && eleventy",
    "build:css": "unocss && mkdir -p _site/public/css && lightningcss --bundle --minify src/css/main.css -o _site/public/css/main.css && purgecss --css _site/public/css/main.css --content src/*.webc src/{_includes,partials}/*.webc src/_includes/components/*.webc -o _site/public/css/main.css --variables --keyframes --safelist :where",
    "minify:js": "terser _site/public/js/main.js -m --toplevel -o _site/public/js/main.js",
    "minify:svg": "svgo _site/public/assets/icons.svg",
    "clean-build": "rm -rf _site/"
  },
  "dependencies": {
    "@artalar/act": "^3.2.1",
    "htmx.org": "^1.8.6",
    "open-props": "^1.5.5"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-webc": "^0.11.0",
    "@netlify/functions": "^1.4.0",
    "@types/node": "^18.14.5",
    "esbuild": "^0.17.10",
    "html-minifier": "^4.0.0",
    "lightningcss": "^1.19.0",
    "lightningcss-cli": "^1.19.0",
    "netlify-cli": "^13.0.0",
    "node-fetch": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "purgecss": "^5.0.0",
    "svgo": "^3.0.2",
    "typescript": "^4.9.5",
    "unocss": "^0.50.6",
    "workbox-cli": "^6.5.4"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ]
}
