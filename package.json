{
  "name": "twitch-pages",
  "version": "1.0.0",
  "description": "Twitch alternative pages",
  "scripts": {
    "dev": "npm-run-all -p watch:* netlify",
    "netlify": "netlify dev",
    "watch:unocss": "unocss --watch",
    "watch:ts": "esbuild src/*.ts --bundle --tree-shaking --outdir=public/js/ --watch",
    "watch:config": "esbuild src/config.prod.ts --format=cjs --outdir=src/js/ --watch",
    "build": "NODE_ENV=production npm-run-all clean-build build:ts build:11ty -p build:css minify:*",
    "build:ts": "esbuild src/main.ts --bundle --outdir=_site/public/js/",
    "build:sw": "workbox generateSW",
    "build:11ty": "esbuild src/config.prod.ts --format=cjs --outdir=src/js/ && eleventy",
    "build:css": "unocss",
    "minify:js": "terser _site/public/js/main.js -m --toplevel -o _site/public/js/main.js",
    "minify:svg": "svgo _site/public/assets/icons.svg",
    "clean-build": "rm -rf _site/"
  },
  "dependencies": {
    "@artalar/act": "^3.2.1",
    "@nanostores/persistent": "^0.9.1",
    "eventslibjs": "^1.2.0",
    "htmx.org": "github:last-arg/htmx",
    "nanostores": "^0.9.4",
    "open-props": "^1.5.5",
    "sprae": "^6.1.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-webc": "^0.11.0",
    "@11tyrocks/eleventy-plugin-lightningcss": "^1.1.2",
    "@netlify/functions": "^1.4.0",
    "@types/node": "^20.2.6",
    "eleventy-plugin-purgecss": "^0.4.0",
    "esbuild": "^0.18.0",
    "html-minifier": "^4.0.0",
    "netlify-cli": "^15.4.1",
    "npm-run-all": "^4.1.5",
    "svgo": "^3.0.2",
    "typescript": "^4.9.5",
    "unocss": "^0.53.1",
    "workbox-cli": "^6.5.4"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ]
}
