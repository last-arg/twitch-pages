{
  "name": "twitch-pages",
  "version": "1.0.1",
  "description": "Twitch alternative pages",
  "scripts": {
    "dev": "npm-run-all -p watch:* netlify",
    "netlify": "netlify dev",
    "watch:unocss": "unocss --watch",
    "watch:js": "esbuild src/*.js --bundle --outdir=public/js/ --watch",
    "watch:config": "esbuild src/config.prod.js --format=cjs --outdir=src/js/ --watch",
    "build": "NODE_ENV=production npm-run-all clean-build build:js build:11ty -p build:css minify:*",
    "build:js": "esbuild src/main.js --bundle --tree-shaking --outdir=_site/public/js/",
    "build:sw": "workbox generateSW",
    "build:11ty": "esbuild src/config.prod.js --format=cjs --outdir=src/js/ && eleventy",
    "build:css": "unocss && lightningcss --minify --bundle --targets '>= 0.25%' src/css/main.css -o _site/css/main.css",
    "minify:js": "terser _site/public/js/main.js -m --toplevel -o _site/public/js/main.js",
    "minify:svg": "svgo _site/public/assets/icons.svg",
    "clean-build": "rm -rf _site/ && rm -rf public/{css,js}"
  },
  "dependencies": {
    "@nanostores/persistent": "^0.9.1",
    "htmx.org": "^1.9.10",
    "idiomorph": "^0.3.0",
    "nanostores": "^0.9.5",
    "open-props": "^1.6.17"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@11tyrocks/eleventy-plugin-lightningcss": "^1.3.0",
    "@netlify/functions": "^1.6.0",
    "@types/node": "^20.11.5",
    "eleventy-plugin-purgecss": "^0.4.0",
    "esbuild": "^0.18.20",
    "html-minifier": "^4.0.0",
    "lightningcss-cli": "^1.23.0",
    "netlify-cli": "^15.11.0",
    "npm-run-all": "^4.1.5",
    "svgo": "^3.2.0",
    "unocss": "^0.53.6",
    "workbox-cli": "^6.6.0"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ]
}
